<srcipt>
const inputbox = document.getElementById("input_id");
const listContainer = document.getElementById("list-container");

function addTask() {
    if (inputbox.value === '') {
        alert("You have to enter something");
    } else {
        let li = document.createElement("li");
        li.innerHTML = inputbox.value;
        listContainer.appendChild(li);

        // Add delete button
        let span = document.createElement("span");
        span.innerHTML = "\u00d7"; // Unicode for 'Ã—' symbol
        li.appendChild(span);
    }
    inputbox.value = ''; // Clear input box
    saveData();
}

// Fixing the typo in addEventListener
listContainer.addEventListener("click", function (e) {
    if (e.target.tagName === "LI") {
        e.target.classList.toggle("checked"); // Toggle 'checked' class
        saveData();
    } else if (e.target.tagName === "SPAN") {
        e.target.parentElement.remove(); // Remove parent <li> element
        saveData();
    }
}, false);

// Fixing the typo in localStorage reference
function saveData() {
    localStorage.setItem("data", listContainer.innerHTML);
}

// Adding validation for localStorage data
function showTask() {
    const savedData = localStorage.getItem("data");
    if (savedData) {
        listContainer.innerHTML = savedData;
    }
}

// Call showTask on page load
showTask();
</script>
